datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  password     String
  flowersLiked Flower[]
}

model FlowerPreviews {
  id         String   @id @default(cuid())
  title      String
  underTitle String?
  flowers    Flower[]
}

model Flower {
  id     String  @id @default(cuid())
  title  String
  imgUrl String? //Just use  

  alt       String?
  salePrice Float?
  price     Float

  users User[]

  flowerPreview   FlowerPreviews? @relation(fields: [flowerPreviewId], references: [id])
  flowerPreviewId String?
  userId          String?
}
