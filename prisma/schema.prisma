datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

generator client {
  provider = "prisma-client-js"
}

enum AuthProvider {
  EMAIL
  GOOGLE
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String
  AuthProvider AuthProvider @default(EMAIL)

  password String?

  flowersLiked Flower[] @relation("flowersLiked")
  shoppingList Flower[] @relation("shoppingList")
}

enum PreviewColors {
  ORANGE
  RED
  GREEN
  BLUE
  PURPLE
  PINK
}

model FlowerPreviews {
  id         String  @id @default(cuid())
  title      String
  underTitle String?
  alt        String?

  color PreviewColors?

  flowers Flower[]
}

model Flower {
  id          String @id @default(cuid())
  title       String
  description String

  price     Float
  salePrice Float?

  alt String

  users        User[] @relation("flowersLiked")
  shoppingList User[] @relation("shoppingList")

  tags Tags[]

  flowerPreview   FlowerPreviews? @relation(fields: [flowerPreviewId], references: [id])
  flowerPreviewId String?
}

model Tags {
  tag    String   @id @unique
  Flower Flower[]
}
